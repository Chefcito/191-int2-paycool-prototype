<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryPurple"
            android:lineSpacingExtra="-10dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="28sp"
            android:text="¿Cómo te llamas?" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/opensans_regular"
            android:textSize="12sp"
            android:textColor="@color/primaryPurple"
            android:text="Queremos conocerte. ¡No te preocupes! toda tu información es confidencíal."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/gray1"
            android:text="Tu nombre" />

        <EditText
            android:id="@+id/fragment_sign_up_name_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColorHint="@color/gray1"
            android:hint="Nombre" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/gray1"
            android:text="Tus apellidos" />

        <EditText
            android:id="@+id/fragment_sign_up_name_surname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColorHint="@color/gray1"
            android:hint="Apellidos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/fragment_sign_up_name_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_purple"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FFFFFF"
            android:text="SIGUIENTE" />

    </LinearLayout>

</LinearLayout>