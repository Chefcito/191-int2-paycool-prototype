<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryPurpleColor"
            android:lineSpacingExtra="-10dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="28sp"
            android:text="Crea una contraseña" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/opensans_regular"
            android:textSize="12sp"
            android:textColor="@color/primaryPurpleColor"
            android:text="¡Asegurate de ser muy creativo! Tu contraseña no debe contener tu nombre ni datos personales."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/gray1"
            android:text="Tu contraseña" />

        <EditText
            android:id="@+id/fragment_sign_up_password_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:inputType="numberPassword"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColorHint="@color/gray1"
            android:hint="Contraseña" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/fragment_sign_up_password_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_purple"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FFFFFF"
            android:text="SIGUIENTE" />

    </LinearLayout>

</LinearLayout>